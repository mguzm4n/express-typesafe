{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "commonjs",                   
    "outDir": "./dist",                     
    "rootDir": "./src",                     
    "strict": true,         
    "resolveJsonModule": true,                
    "esModuleInterop": true,                
    "skipLibCheck": true                    
  },
  "include": ["src/**/*", "src/types/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
